{
  "compilerOptions": {
    "strictNullChecks": true,
    "noUnusedLocals" : false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "lib": ["dom", "ES2017"],
    "module": "ES2015",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true,
    "allowJs": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}